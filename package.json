{
  "name": "@cypress/error-message",
  "description": "Uniform error display in the terminal",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/cypress-io/error-message/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=0.12"
  },
  "files": [
    "lib/*.js"
  ],
  "homepage": "https://github.com/cypress-io/error-message#readme",
  "keywords": [
    "error",
    "exception",
    "term",
    "terminal",
    "util"
  ],
  "license": "MIT",
  "main": "lib/",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cypress-io/error-message.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "pretest": "npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "build": "babel src -d lib",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-preset-es2015": "6.24.1",
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.9.0",
    "deps-ok": "1.2.0",
    "git-issues": "1.3.1",
    "license-checker": "11.0.0",
    "mocha": "3.4.2",
    "nsp": "2.6.3",
    "pre-git": "3.15.0",
    "snap-shot": "2.17.0",
    "standard": "10.0.2",
    "semantic-release": "^6.3.6"
  },
  "dependencies": {
    "check-more-types": "2.24.0",
    "common-tags": "1.4.0",
    "getos": "3.0.1",
    "lazy-ass": "1.6.0",
    "pify": "3.0.0",
    "ramda": "0.24.1"
  }
}
